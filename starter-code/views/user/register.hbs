<div class="container py-3">
    <h2 class="py-3">Register into {{title}}</h2>
    <form class="py-2" action="/register" method="POST">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control {{#if errors.username}}is-invalid{{/if}}" id="username" name="username" value="{{user.username}}" required>
            {{#if errors.username}}
                <div class="invalid-feedback">
                {{errors.username}}
                </div>
            {{/if}}
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" id="password" name="password" onchange='check_pass();' required>
            {{#if errors.password}}
                <div class="invalid-feedback">
                {{errors.password}}
                </div>
            {{/if}}
        </div>
        <div class="mb-3">
            <label for="passwordRepeat" class="form-label">Repeat Password</label>
            <input class="form-control" type="password" name="passwordRepeat" id="passwordRepeat" onchange='check_pass();' required>
        </div>

<button type="submit" name="submit" class="btn btn-dark" id="submit" disabled>Register</button>
<button type="reset" class="btn btn-light mx-2">Clear fields</button>
</form>
</div>