<div class="container py-3">
    <h2 class="py-3">{{celebrity.name}}'s profile</h2>
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
            <img src="https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png" class="img-thumbnail" alt="{{celebrity.name}}">
            </div>
            <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title pb-2">{{celebrity.name}}</h3>
                <p class="card-text">Occupation: <strong>{{celebrity.occupation}}</strong></p>
                <p class="card-text">Gender: <strong>unknown</strong> / Age: <strong>unknown</strong></p>
                <p class="card-text">Catch phrase: <strong><i>"{{celebrity.catchPhrase}}"</i></strong></p>
                {{#if celebrity.cast}}<p class="card-text">Movies: <strong>{{#each celebrity.cast}}<a href="../movies/{{movie._id}}">{{movie.title}}{{#if @last}}.{{else}},{{/if}}</a> {{/each}}</strong></p>{{/if}}
            </div>
            </div>
        </div>
    </div>
    <a href="/celebrities" class="btn btn-secondary">Go back to celebrities list</a>
    {{#if currentUser}}
    <a href="/celebrities/{{celebrity._id}}/edit" class="btn btn-primary">Edit profile</a>
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">Delete profile</button>
    {{/if}}
    
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete {{celebrity.name}}'s profile? This action can't be reverted.
      </div>
      <div class="modal-footer">
        <form method="POST" action="/celebrities/{{celebrity._id}}/delete">
            <input type="text" class="form-control" id="_id" name="_id" value="{{celebrity._id}}" hidden>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">Confirm delete</button>
        </form>
      </div>
    </div>
  </div>
</div>


